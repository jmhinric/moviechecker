<%= form_for user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <% if @user.id.nil? %>
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <span class="button">
      <%= f.submit "Sign Up"%>
    </span>

  <% else %>

    <%= f.submit %>

  <% end %>

<% end %>