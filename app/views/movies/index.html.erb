<script type="template" class="movie_template">
  <li class="<%%= movie.get('seen') ? 'seen' : '' %>">
    <div class="movie-title">
      <h3 class="title-text">
        <%%= movie.get('title') %>
      </h3>
    </div>

    <img class="poster" src="<%%= movie.get('poster') %>"><br/>
    
    <input type="checkbox" <%%= movie.get('seen')? 'checked' : '' %> />
    <span class="seen-label">Seen</span>
    
    <button class="delete">Delete</button>
  </li>
</script>

